<div class="container devise-form">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div role="form">
        <h2>Sign up</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.text_field :username, autofocus: true %>  
          <%= f.email_field :email %>
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.form_group :account_type, label: { text: "Account Type?" } do %>
            <%= f.radio_button :account_type, 'artist', label: "Artist", inline: true %>
            <%= f.radio_button :account_type, 'label', label: "Label", inline: true %>
            <%= f.radio_button :account_type, 'patron', label: "Patron", inline: true %>
          <% end %>

        <%= f.primary "Sign up" %>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
