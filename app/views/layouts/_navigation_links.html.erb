<% if user_signed_in? %>
    <% if current_user.account_type == "Artist" %>
      <li><%= link_to "Upload", new_artist_track_path(current_user) %></li>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.account.artist_name %><span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Home", current_user.account %></li>
            <li><%= link_to "Tracks", artist_tracks_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_artist_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% end %>

<% else %>
  <li><%= link_to "Sign Up", sign_up_path %></li>
  <li><%= link_to "Sign In", sign_in_path %></li>
<% end %>