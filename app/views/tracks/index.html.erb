<div class='container' id='main'>
  <div class='row'>
    <h1>Listing tracks</h1>

    <table class='table'>
      <thead>
        <tr>
          <th>Track title</th>
          <th>Description</th>
          <th>Track type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tracks.each do |track| %>
          <tr>
            <td><%= track.track_title %></td>
            <td><%= track.description %></td>
            <td><%= track.track_type %></td>
            <td><%= link_to 'Show', artist_track_path(track.artist_id, track.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 

