<% provide(:title, "Edit Track") %>
<div class="row" id='main'>
  <div class="col-md-4 col-md-offset-4">
    <h1>Update your track</h1>
    <%= bootstrap_form_for ([@artist, @track]), :html => { :multipart => true } do |f| %>
      <%= image_tag @track.avatar.url(:medium) %>
      <%= f.file_field :avatar %>
      <%= f.text_field :track_title %>
      <%= f.text_field :description %>
      <%= f.text_field :track_type %>

      <%= f.submit "Save changes" %>
    <% end %>
  <div>
    <%= link_to 'Back', artist_tracks_path %>
  </div>  
  </div>
</div>
