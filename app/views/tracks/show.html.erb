<div class="container" id='main'>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p id="notice"><%= notice %></p>

     <div>
      <%= image_tag @track.avatar.url(:medium) %>
     </div> 
     <div>
      <p>
        <strong>Track title:</strong>
        <%= @track.track_title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @track.description %>
      </p>

      <p>
        <strong>Track type:</strong>
        <%= @track.track_type %>
      </p>

     </div>
     </div>
  </div>
</div>
