<div class='container' id='main'>
  <div class='row'>
    <h1>Listing artists</h1>

    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>Artist</th>
          <th>Country</th>
          <th>Genre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= image_tag artist.avatar.url(:thumb) %></td>
            <td><%= link_to(artist.artist_name, artist) %></td>
            <td><%= artist.country %></td>
            <td><%= artist.genre %></td>
            <td><%= link_to 'Show', artist %></td>
            <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
            <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>