<div class='container' id='main'>
  <div class='row'>
    <h1>Listing artists</h1>

    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>Artist</th>
          <th>Country</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= link_to image_tag(artist.avatar.url(:thumb)), artist %></td>
            <td><%= link_to artist.artist_name, artist %></td>
            <td><%= artist.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>