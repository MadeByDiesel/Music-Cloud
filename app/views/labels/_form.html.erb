      <ul>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <%= image_tag @label.avatar.url(:thumb) %>
      <%= f.file_field :avatar %>
      <%= f.text_field :label_name %>

