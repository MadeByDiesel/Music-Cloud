<h1>Listing labels</h1>

<table>
  <thead>
    <tr>
      <th>Labelname</th>
      <th>City</th>
      <th>Country</th>
      <th>Contactname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.labelname %></td>
        <td><%= label.city %></td>
        <td><%= label.country %></td>
        <td><%= label.contactname %></td>
        <td><%= link_to 'Show', label %></td>
        <td><%= link_to 'Edit', edit_label_path(label) %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path %>
